import os
os.system('cls'if os.name=='nt'else 'clear')

#Se le solicita al usuario ingresar cuantas barras de pan vendidas no son frescas y se aplica el descuento

barras=int(input("Introduce el numero de barras de pan vendidas que no son frescas: ")) 
precio= 3.49
descuento= 0.6
coste= barras*precio*(1-descuento)
print("El coste de una barra fresca es de " + str(precio)+ "L.")
print("El descuento sobre una barra no fresca es de " + str(descuento * 100))
print("El coste final a pagar es de "+ str(round(coste,2))+ "L.")